{
	"name": "conditional_split",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "employee",
						"type": "DatasetReference"
					},
					"name": "employe"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "employee",
						"type": "DatasetReference"
					},
					"name": "sink1"
				}
			],
			"transformations": [
				{
					"name": "split1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          id as short,",
				"          employee as string,",
				"          salary as short,",
				"          deptid as short",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> employe",
				"employe split(equals(deptid,101),",
				"     equals(deptid,102),",
				"     disjoint: false) ~> split1@(itemployee, hremployee, otheremployee)",
				"split1@hremployee sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     input(",
				"          {id employee salary dept id} as string",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> sink1"
			]
		}
	}
}